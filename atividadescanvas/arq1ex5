#include <stdio.h>
#include <math.h>

int main() {
    float largura, altura, area, litros;
    int latas;
    printf("Informe a largura da parede em metros: ");
    scanf("%f", &largura);
    printf("Informe a altura da parede em metros: ");
    scanf("%f", &altura);
    area = largura * altura;
    litros = (area * 0.3) / 1;
    latas = ceil(litros / 2.0);
    printf("Você precisará de %d lata(s) de tinta para pintar a parede.\n", latas);
    return 0;
}
