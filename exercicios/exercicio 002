#include <stdio.h>

int main() {
    float receita, despesa, saldo = 0.0;
    printf("Digite o valor da receita: ");
    scanf("%f", &receita);
    printf("Digite o valor da despesa: ");
    scanf("%f", &despesa);
    saldo = receita - despesa;
    printf("Saldo atualizado: R$ %.2f\n", saldo);
    return 0;
}
